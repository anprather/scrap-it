<div class="container">

  <div class="row">
    <div class="col-md-6 px-0 mx-auto">
      <% if @next_pickup %>
        <div class="card-schedule p-1">
          <div class="schedule-text">
            <h3>Your <u>next pickup</u> is scheduled for:</h3>
          </div>
          <div class="schedule-container">
            <div class="schedule-date">
              <h4><%= @next_pickup.date.strftime("%e") %></h3>
              <h4><%= @next_pickup.date.strftime("%b") %></h4>
            </div>
            <div class="schedule-day">
              <h4><%= @next_pickup.date.strftime("%A") %></h4>
              <h3><%= @next_pickup.time_of_day.upcase %></h3>
            </div>
            <div class="reschedule">
              <%= link_to 'reschedule', edit_pickup_path(@next_pickup), class: "btn btn-primary" %>
            </div> <!--Close Schedule DIV -->
          </div> <!-- Schedule-container DIV -->
        </div> <!-- card-schedule DIV -->
        <div class="reward-container card-colored">
        
        </div>
      <% else %>
        <h3>Schedule a pickup</h3>
      <% end %>
      <%= link_to "Book a pickup", new_pickup_path %>
    </div> <!-- COL -->
  </div> <!-- ROW -->

<hr>


  <div class="row">
    <div class="col-md-6 px-0 mx-auto">
      <h4>Your Past Pickups:</h4>
      <%= render 'past_pickups' %>
    </div> <!-- COL -->
  </div> <!-- ROW -->


</div>
