<%= simple_form_for UserCategory.new do |f| %>
  <div class="list-container">
    <ul class="ks-cboxtags">
      <% Category.all.each do |cat| %>
        <li><input name="categories_ids[]" type="checkbox" value="<%= cat.id%>" class="mr-4">
            <label for="<%= cat.name %>" class="checkbox"><%= cat.name %></label></li>
      <% end %>
    </ul>
    <%= f.button :submit, "Continue", class: "category-submit" %>
  </div>
<% end %>

