<div class="container p-0 mt-4">
 <div class="card-impact">
    <div class="card-impact-top">
      <div class="impact-avatar">
        <% if current_user && current_user.uid != nil %>
          <%= image_tag "http://graph.facebook.com/#{current_user.uid}/picture?type=square", class: "avatar" %>
        <% else %>
          <%= image_tag "ScrapitSteve.jpeg", class: "avatar" %>
        <% end %>
      </div>
      <div class="impact-title">
        <p><strong>You're a rockstar, <%= current_user.first_name%>!</strong></p>
        <h5 style="color: white;"> <strong> <%= current_user.lifetime_points %> lifetime Scrapit points! </strong></h5>
      </div>
    </div>
    <div class="impact-points">
      <div>
        <p> You've composted</p>
        <p style="font-weight: bold; font-size: 24px">  <%= @picked_up_kgs %> Kg</p>
      </div>
      <div>
        <p> Your total pickups</p>
        <p style= "font-weight: bold; font-size: 24px"> <%= @completed_pickups_number %> X</h5>
      </div>
      <div>
        <p> Scrapit has diverted </p>
        <p style="font-weight: bold; font-size: 24px"> <%= @diverted_total %> Kg </p>
      </div>
    </div>
  </div>
    <div class="card-badges">
      <div class="badges-title">
        <% unless current_user.badges.empty? %>
        <h4>Your Scrapit badges</h4>
        <% end %>
      </div>
      <div class="card-badges-top">
        <!-- Remember to replace Badge.all by @user_badges -->
        <% current_user.badges.each do |badge| %>
          <div class="badge-earned">
            <%= image_tag "#{badge.name}.png", class: "avatar" %>
          </div>
        <% end %>
      </div>
      <div class="badges-title">
        <h4>Badges up next</h4>
      </div>
      <div class="badges-wrapper">
        <!-- Remember to replace Badge.all with upcoming badges -->
        <% current_user.up_next_badges.each do |badge| %>
        <div class="upcoming-badge">
          <div class="badge-image">
            <%= image_tag "#{badge.name}.png", class: "avatar" %>
          </div>
          <div class="badge-description">
          <%= badge.description %>
          </div>
        </div>
          <% end %>
      </div>
</div>
