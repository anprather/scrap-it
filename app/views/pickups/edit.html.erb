<div class="container py-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class='pickup-booking-dates' data-unavailable="<%= current_user.unavailable_dates.to_json %>">
        <%= simple_form_for([@pickup]) do |f| %>
            <%= f.hidden_field :date %>
            <%= f.input :time_of_day, as: :radio_buttons, collection: ["Morning (7AM - 11AM)", "Afternoon (11AM - 4PM)", "Evening (4PM - 8PM)"] %>
            <%= f.input :notes, as: :text %>
            <%= f.submit "Confirm Pickup", class: "btn btn-primary" %>
            <%= link_to 'Cancel', user_dashboard_path, class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>

</div>
