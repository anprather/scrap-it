<div class="container">

  <div class="row">
    <div class="col-md-6 px-0 mx-auto">
      <% if @next_pickup %>
        <%= render 'next_pickup' %>
      <% else %>
        <%= render 'no_pickup' %>
      <% end %>
      <%= link_to "Book your next pickup", new_pickup_path, class: "btn btn-primary w-100" %>
    </div> <!-- COL -->
  </div> <!-- ROW -->

<hr>


  <div class="row">
    <div class="col-md-6 px-0 mx-auto">
      <h4>Your Past Pickups:</h4>
      <%= render 'past_pickups' %>
    </div> <!-- COL -->
  </div> <!-- ROW -->


</div>
